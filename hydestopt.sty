\newalphalph\HyDest@hexstring\HyDest@hexchar{252}% 256 - 4
\renewcommand*{\theHyDest}{%
  \expandafter\HyDest@uccheck
  \pdfunescapehex{\HyDest@hexstring{\value{HyDest}}}%
  \@empty\@empty\@nil
}
% avoid unicode marker at the begin
\begingroup
  \catcode`\^=7 %
  \@makeother\^^ff%
  \@makeother\^^fe%
  \gdef\HyDest@uccheck#1#2#3\@nil{%
    \ifx#1^^ff%
      \ifx#2^^fe%
        \string\(#3%
      \else
        #1#2#3%
      \fi
    \else
      \ifx#1^^fe%
        \ifx#2^^ff%
          \string\)#3%
        \else
          #1#2#3%
        \fi
      \else
        #1#2#3%
      \fi
    \fi
  }%
\endgroup

\def\hydest@use#1{%
  \begingroup
    \edef\x{%
      \expandafter\noexpand\csname HyD@\pdfunescapehex{#1}\endcsname
    }%
    \expandafter\ifx\x\relax
      \stepcounter{HyDest}%
% \typeout{* hydest@use: \number\value{HyDest} (\pdfescapehex{\theHyDest})
% \pdfunescapehex{#1}}%
      \expandafter\xdef\x{\theHyDest}%
    \fi
% \typeout{******************}%
  \endgroup
}

\AtBeginDocument{%
  \def\hydest@use#1{}%
}

\def\HyDest@markused#1{%
% \typeout{* #1 (\pdfescapehex{#1})}%
  \if@filesw
    \immediate\write\@auxout{%
      \string\hydest@use{\pdfescapehex{#1}}%
    }%
  \fi
}

